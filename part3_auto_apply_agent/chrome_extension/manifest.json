{
  "manifest_version": 3,
  "name": "Job Application CAPTCHA Solver",
  "version": "1.0.0",
  "description": "Automatically solves CAPTCHA challenges for job application forms",
  "permissions": [
    "scripting",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>",
    "http://127.0.0.1:8765/*",
    "http://localhost:8765/*"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content-script.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content/captcha-handler.js"],
      "matches": ["<all_urls>"]
    }
  ]
}

